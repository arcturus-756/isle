  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-3.backdrop(data-navbar-on-scroll)
    .container
      a.navbar-brand.d-flex.align-items-center.fw-semi-bold.fs-3(href='http://localhost:8765/') 
        img(src=`${CWD}assets/img/gallery/logo.png` alt=''  style='width:100px').me-3
        .text-secondary Crow's Nest 

      button.navbar-toggler.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.pt-2.pt-lg-0.font-base
          li.nav-item
            a.nav-link.fw-medium(href='http://localhost:8989/') Home
          li.nav-item
            a.nav-link(href='?page=taskSheet') |Tasks Sheet|
          
          li.nav-item
            a.nav-link(href='?page=todaysTrackers') |Trackers|

          li.nav-item
            a.nav-link(href='?page=goals') |Goals|
          li.nav-item
            a.nav-link(href='?page=logs') |Logs|
          li.nav-item
            a.nav-link(href='?page=daily_tasks') |Daily Tasks|
          
          form(action="/new_movie" method="GET")
              input.form-control.border-200(type='date' name='date' onchange='this.form.submit()' placeholder='Search' aria-label='Search' style="background:#FFF2FF;") 


     


          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
              | More
            ul.dropdown-menu(aria-labelledby='navbarDropdown')
              li
                a.dropdown-item(href='#') Action
              li
                a.dropdown-item(href='#') Another action            
              
        form.ps-lg-5
          button.btn.btn-lg.btn-primary.rounded-pill.bg-gradient.font-base.order-0(type='submit') Login
